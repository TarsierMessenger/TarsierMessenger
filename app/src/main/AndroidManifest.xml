<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.tarsier.tarsier" >

    <!-- Request permission to use the Wi-Fi hardware . -->
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_NETWORK_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <uses-permission
        android:required="true"
        android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- to write on sd card -->
    <uses-permission
        android:required="true"
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".Tarsier"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activity.HomeActivity"
            android:label="@string/app_name" >

            <!-- android:theme="@android:style/Theme.Holo.Light.NoActionBar" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.AddProfilePictureActivity"
            android:label="@string/title_activity_add_profile_picture"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ui.activity.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".network.old.WiFiDirectDebugActivity"
            android:label="@string/title_activity_wifidirectdebug" >
        </activity>
        <activity
            android:name=".ui.activity.NewChatRoomActivity"
            android:label="@string/title_activity_new_chatrooom" >
        </activity>
        <activity
            android:name=".ui.activity.ChatRoomParticipantsActivity"
            android:label="@string/title_activity_chat_room_participants" >
        </activity>
        <activity
            android:name=".ui.activity.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>

        <activity android:name=".ui.activity.ChatListActivity"
            android:label="@string/title_activity_chat_list"
            android:theme="@style/CustomActionBarTheme" >
        </activity>

        <activity
            android:name=".ui.activity.ChatActivity"
            android:label="@string/title_activity_conversation" >
        </activity>
    </application>

</manifest>
