<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.tarsier.tarsier.ui.activity.AddProfilePictureActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_from_existing"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_spacing"
            android:text="@string/add_from_existing"
            android:textColor="@android:color/white"
            android:background="@drawable/tarsier_green_base"
            android:onClick="onClickAddExisting"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_new_picture"
            android:text="@string/add_new_picture"
            android:textColor="@android:color/white"
            android:layout_below="@id/add_from_existing"
            android:background="@drawable/tarsier_green_base"
            android:onClick="onClickNewPicture"
            />

        <ImageView
            android:layout_width="@dimen/add_picture"
            android:layout_height="@dimen/add_picture"
            android:layout_below="@id/add_new_picture"
            android:layout_marginTop="@dimen/view_spacing"
            android:layout_centerHorizontal="true"
            android:id="@+id/preview_profile_picture"
            android:contentDescription="@string/content_description_add_profile_picture"/>


        </RelativeLayout>

</RelativeLayout>
