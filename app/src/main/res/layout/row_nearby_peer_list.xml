<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/nearbyPeerPicture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/placeholder"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/mask"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignTop="@id/nearbyPeerPicture"
            android:layout_alignBottom="@id/nearbyPeerPicture"
            android:layout_alignLeft="@id/nearbyPeerPicture"
            android:layout_alignRight="@id/nearbyPeerPicture"
            android:scaleType="fitXY"
            android:src="@drawable/mask" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icons">

        <TextView
            android:id="@+id/nearbyPeerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tarsier_font" />

        <TextView
            android:id="@+id/nearbyPeerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nearbyPeerName"
            android:textColor="@color/tarsier_font_secondary" />

    </RelativeLayout>


</RelativeLayout>