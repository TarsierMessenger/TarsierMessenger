<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.tarsier.tarsier.ui.activity.ProfileActivity"
    android:id="@+id/rel_layout">

    <ImageView
            android:layout_width="@dimen/add_picture"
            android:layout_height="@dimen/add_picture"
            android:id="@+id/add_picture_button"
            android:src="@drawable/add_picture"
            android:contentDescription="@string/add_profile_picture_desc"
            android:layout_toEndOf="@+id/add_picture_button" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:clickable="true"
            android:onClick="onClickAddPicture"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username" android:layout_alignBottom="@+id/add_picture_button"
            android:layout_toEndOf="@+id/add_picture_button"
            android:layout_marginBottom="30dp" android:inputType="text"
            android:layout_alignParentEnd="true" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_message_profile_activity" android:layout_below="@+id/add_picture_button"
            android:layout_marginTop="32dp" android:layout_alignParentStart="true"
            android:inputType="textShortMessage" android:layout_alignEnd="@+id/username"
            android:hint="@string/status_message_placeholder"/>
</RelativeLayout>
